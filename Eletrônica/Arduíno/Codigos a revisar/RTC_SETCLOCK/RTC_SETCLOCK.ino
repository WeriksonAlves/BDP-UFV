#include "Wire.h"
 
void setup( void )
{
  Wire.begin() ;
  Serial.begin( 9600 ) ;
 
  Wire.beginTransmission( 0x68 ) ;
  Wire.write( 0x00 ) ; // Endereço 00h.
 
  /**********
   * 00h Segundos.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      | CH  |   10 Segundos   |       Segundos        |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x00 ) ; // 01 = 1 Segundo.
 
  /**********
   * 01h Minutos.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |  0  |   10 Minutos    |        Minutos        |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x51 ) ; // 02 =2 Minutos.
 
  /**********
   * 02h Horas.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |  0  | 24h | 10 Horas  |         Horas         |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x19 ) ; // Set 24 + 14 Horas = 0000.0000 OR 0001.0100 = 14h.
 
  /**********
   * 03h Dia da semana.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |  0  |  0  |  0  |  0  |  0  |       Dia       |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x05 ) ; // 01h = Domingo.
 
  /**********
   * 04h Dia do mês.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |  0  |  0  |  10 Dia   |          Dia          |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x24 ) ; // 01 = dia 1.
 
  /**********
   * 05h Mês.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |  0  |  0  |  0  | 10M |          Mês          |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x05 ) ; // 01 =  Janeiro.
 
  /**********
   * 06h Ano.
   * 
   *  Bit    7     6     5     4     3     2     1     0
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   *      |        10 Year        |          Year         |
   *      +-----+-----+-----+-----+-----+-----+-----+-----+
   * 
   **********/
  Wire.write( 0x18 ) ; // 01 = Ano 2001.
 
  Wire.endTransmission() ;
}

